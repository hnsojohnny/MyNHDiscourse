<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/banner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#765"
        android:text="Banner"
        android:gravity="center"
        app:layout_constraintDimensionRatio="16:6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <CheckBox
        android:id="@+id/text_cb"
        app:layout_constraintTop_toBottomOf="@id/banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/content_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="你好啊"
        app:layout_constraintTop_toBottomOf="@id/banner"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/text_cb"/>

    <TextView
        android:id="@+id/tab1_tv"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="TAB1"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@+id/tab2_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tab2_tv"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toRightOf="@id/tab1_tv"
        app:layout_constraintRight_toLeftOf="@+id/tab3_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:text="TAB2"/>

    <TextView
        android:id="@+id/tab3_tv"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="TAB3"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/tab2_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>